generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  hostels Hostel[]
  @@map("users")
}


model Hostel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String
  price       Int
  banner_img      String
  image       String[]
  Features    String[]
  IsSecuirtyReq String
  security    Int
  contactInfo String 
  under_zone String
  location   String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("hostels")
}
